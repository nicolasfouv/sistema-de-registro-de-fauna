generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model applicant {
  id       String  @id @default(uuid())
  name     String  @map("nome")
  email    String  @unique
  password String  @map("senha")
  message  String? @map("mensagem")

  @@map("solicitante")
}

model user {
  id         String       @id @default(uuid())
  name       String       @map("nome")
  email      String       @unique
  password   String       @map("senha")
  roleId     String       @default("2") @map("id_funcao")
  userPic    String?
  userAccess userAccess[]
  role       role         @relation(fields: [roleId], references: [id])

  @@map("usuario")
}

model role {
  id   String @id @default(uuid())
  name String @map("nome")
  user user[]

  @@map("funcao")
}

model group {
  id          String        @id @default(uuid())
  name        String        @unique @map("nome")
  groupAccess groupAccess[]

  @@map("grupo")
}

model form {
  id         String        @id @default(uuid())
  name       String        @unique @map("nome")
  categoryId String
  group      groupAccess[]
  userAccess userAccess[]
  category   category      @relation(fields: [categoryId], references: [id])

  @@map("formulario")
}

model category {
  id           String  @id @default(uuid())
  name         String  @unique @map("nome")
  categoryIcon String?
  form         form[]

  @@map("categoria")
}

model userAccess {
  id          String      @id @default(uuid())
  userId      String
  formId      String
  accessLevel accessLevel @map("nivel_acesso")
  user        user        @relation(fields: [userId], references: [id])
  form        form        @relation(fields: [formId], references: [id])

  @@map("autorizacao_usuario")
}

model groupAccess {
  id          String      @id @default(uuid())
  groupId     String
  formId      String
  accessLevel accessLevel @map("nivel_acesso")
  group       group       @relation(fields: [groupId], references: [id])
  form        form        @relation(fields: [formId], references: [id])

  @@map("autorizacao_grupo")
}

enum accessLevel {
  read
  edit
}
